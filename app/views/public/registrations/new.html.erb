<div class='container'>
  <h2 class="text-center my-3">ユーザー新規登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field row mx-5 my-4">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field row mx-5 my-4">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field row mx-5 my-4">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    <div class="field row mx-5 my-4">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions row mx-5 my-4">
      <%= f.submit "新規登録", class: 'btn btn-success' %>
    </div>
  <% end %>
  <div class="row mx-4 my-4 text-center"> 
    <%= render "public/shared/links" %>
  </div>
</div>